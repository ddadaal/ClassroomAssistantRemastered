<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nju.classroomassistant.student">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity android:name=".ui.question.QuestionActivity"
            android:theme="@style/AppThemeQuestion"></activity>
        <activity android:name=".ui.discussion.DiscussionActivity"
            android:theme="@style/AppThemeDiscussion"/>
        <activity android:name=".ui.practise.PractiseActivity"
            android:theme="@style/AppThemePractiseActivity"/>
        <activity android:name=".ui.main.MainActivity"
            android:theme="@style/AppThemeHome">

        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/FullSceneTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>


</manifest>