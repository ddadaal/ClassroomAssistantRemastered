<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.discussion.DiscussionActivity">

    <EditText
            android:id="@+id/discussion_content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="36dp"
            android:singleLine="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="@string/discussion_hint"
            android:gravity="top"
            android:padding="10dp"
            android:background="@drawable/edit_bg"
    />

    <Button
            android:id="@+id/submit_discussion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="48dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="32dp"
            android:enabled="false"
            android:text="@string/commit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/discussion_content"
            app:layout_constraintVertical_bias="0.1" />



</android.support.constraint.ConstraintLayout>